= form_for(@restaurant) do |f|
  - if @restaurant.errors.any?
    #error_explanation
      %h2
        = pluralize(@restaurant.errors.count, "error")
        prohibited this restaurant from being saved:
      %ul
        - @restaurant.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :category
    %br/
    = f.select :category, [ 'American', 'Chinese', 'Greek', 'Italian', 'Japanese', 'Mexican', 'Nepali', 'Thai' , 'Other'], :prompt => 'Select One'
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :logo
    %br/
    = f.file_field :logo
  .actions
    = f.submit
